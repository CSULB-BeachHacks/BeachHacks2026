rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write to newsletter_subscribers collection
    // Anyone can subscribe to the newsletter and check if already subscribed
    match /newsletter_subscribers/{document} {
      allow read: if true;   // Allow checking for duplicate emails
      allow create: if true; // Anyone can subscribe
      allow update, delete: if false; // No modifications allowed
    }
    
    // Existing rules for users collection (authenticated only)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to read all users
    match /users/{userId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Newsletter logs - admin only
    match /newsletter_logs/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
